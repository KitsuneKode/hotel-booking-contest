generator client {
  provider     = "prisma-client"
  output       = "../src/generated/prisma"
  moduleFormat = "esm"
  runtime      = "bun"
}

datasource db {
  provider = "postgresql"
}

model Users {
  id           String     @id @default(cuid())
  name         String
  email        String     @unique
  passwordHash String
  role         ROLES      @default(customer)
  phone        String?    @db.VarChar(20)
  hotels       Hotels[]
  bookings     Bookings[]
  reviews      Reviews[]
  created_at   DateTime   @default(now())
  updated_at   DateTime   @updatedAt

  @@map("users")
}

model Hotels {
  id           String     @id @default(cuid())
  owner        Users      @relation(fields: [ownerId], references: [id])
  ownerId      String
  name         String
  description  String?
  city         String     @db.VarChar(100)
  country      String     @db.VarChar(100)
  amenities    Json       @default("[]") @db.JsonB
  rating       Decimal    @default(0.0) @db.Decimal(2, 1)
  totalReviews Int        @default(0)
  rooms        Rooms[]
  bookings     Bookings[]
  reviews      Reviews[]
  created_at   DateTime   @default(now())
  updated_at   DateTime   @updatedAt

  @@map("hotels")
}

model Rooms {
  id            String     @id @default(cuid())
  hotel         Hotels     @relation(fields: [hotelId], references: [id], onDelete: Cascade)
  hotelId       String
  roomNumber    String     @db.VarChar(50)
  roomType      String     @db.VarChar(100)
  pricePerNight Decimal    @db.Decimal(10, 2)
  maxOccupancy  Int
  bookings      Bookings[]
  created_at    DateTime   @default(now())
  updated_at    DateTime   @updatedAt

  @@unique([hotelId, roomNumber])
  @@map("rooms")
}

model Bookings {
  id String @id @default(cuid())

  user   Users  @relation(fields: [userId], references: [id])
  userId String

  hotel   Hotels @relation(fields: [hotelId], references: [id])
  hotelId String

  room   Rooms  @relation(fields: [roomId], references: [id])
  roomId String

  checkInDate  DateTime @db.Date
  checkOutDate DateTime @db.Date

  guests      Int
  totalPrice  Decimal   @db.Decimal(10, 2)
  status      STATUS    @default(confirmed)
  cancelledAt DateTime?
  bookingDate DateTime  @default(now())
  reviews     Reviews?
  created_at  DateTime  @default(now())
  updated_at  DateTime  @updatedAt

  @@map("bookings")
}

model Reviews {
  id String @id @default(cuid())

  user   Users  @relation(fields: [userId], references: [id])
  userId String

  hotel   Hotels @relation(fields: [hotelId], references: [id])
  hotelId String

  booking   Bookings @relation(fields: [bookingId], references: [id])
  bookingId String   @unique

  rating  Int
  comment String?

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@unique([userId, bookingId])
  @@map("reviews")
}

enum ROLES {
  customer
  owner
}

enum STATUS {
  confirmed
  cancelled
}
